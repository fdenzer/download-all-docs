
{
  "manifest_version": 2,

  "name": "Download All Docs",
  "version": "1.0.1",
  "minimum_chrome_version": "32.0",
  "description": "Downloads all documents on the page with a single click",

  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_popup": "popup.html",
    "default_title": "Download All Docs"
  },

  "background": {
    "scripts": [
                  "js/background.js",
                  "js/zip.js",
                  "js/zip-fs.js",
                  "js/zip-ext.js",
                  "js/z-worker.js",
                  "js/inflate.js",
                  "js/deflate.js"
               ]
  },

  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "downloads",
    "storage",
    "http://*/",
    "https://*/"
  ],

  "icons": { 
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png" 
  }
}